{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
       "src/*"
      ],
      "@store/*": [
       "src/store/*"
      ],
      "@styles/*": [
       "src/assets/scss/*"
      ],
      "@components/*": [
       "src/components/*"
      ],
      "@layouts/*": [
       "src/layouts/*"
      ],
      "@utils/*": [
       "src/utils/*"
      ],
      "@images/*": [
       "src/assets/images/*"
      ]
     }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "components.d.ts", "src/vite-env.d.ts", "typed-router.d.ts", "auto-imports.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules"]
}
